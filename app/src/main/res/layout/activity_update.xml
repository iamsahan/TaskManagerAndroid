<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".UpdateActivity"
    >

    <TextView
        android:id="@+id/editTaskHeding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins"
        android:text="Edit Task"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/updateSaveButton"
        android:layout_width="94dp"
        android:layout_height="47dp"
        android:layout_alignTop="@id/editTaskHeding"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="123dp"
        android:layout_marginTop="539dp"
        android:layout_marginEnd="178dp"
        android:layout_marginBottom="113dp"
        android:src="@drawable/done" />

    <EditText
        android:id="@+id/updateTitleEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Enter the Title"
        android:padding="12dp"
        android:textSize="20sp"
        android:layout_below="@id/editTaskHeding"
        android:background="@drawable/green_border"
        android:layout_marginTop="16dp"
        android:maxLines="1"
        android:fontFamily="@font/poppins"
        />

    <EditText
        android:id="@+id/updateContentEditText"
        android:layout_width="384dp"
        android:layout_height="117dp"
        android:layout_below="@id/updateTitleEditText"
        android:layout_marginTop="13dp"
        android:background="@drawable/green_border"
        android:fontFamily="@font/poppins"
        android:gravity="top"
        android:hint="Enter the Description"
        android:padding="12dp"
        android:textSize="18sp"


        />

    <EditText
        android:id="@+id/updatedeadlineEditText"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/updateContentEditText"
        android:layout_marginTop="16dp"
        android:background="@drawable/green_border"
        android:fontFamily="@font/poppins"
        android:hint="Priority"
        android:maxLines="1"
        android:padding="12dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/updatetvtextTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/updatedeadlineEditText"
        android:layout_marginTop="23dp"
        android:text="dd/mm/yyyy"
        android:textColor="@color/black"
        android:textSize="28sp"
        tools:text="@tools:sample/date/ddmmyy"/>

    <Button
        android:id="@+id/btn_timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/updatetvtextTime"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/black"
        android:text="Change Date" />

</RelativeLayout>